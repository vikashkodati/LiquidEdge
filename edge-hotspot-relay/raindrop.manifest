application "edge-hotspot-relay" {

  mcp_service "event-ingestion-mcp" {
    visibility = "public"
  }

  observer "hotspot-aggregator" {
    source {
      bucket = "event-storage"
      rule {
        actions = ["PutObject"]
        suffix = ".json"
      }
    }
  }

  observer "alert-generator" {
    source {
      queue = "hotspot-updates"
    }
  }

  smartsql "hotspot-database" {}

  smartbucket "event-storage" {}

  queue "hotspot-updates" {}

}
